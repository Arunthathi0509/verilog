module tff_counter_tb;
    reg clk,reset;
    wire [1:0]count;

    tff_counter_2bit uut (
        .clk(clk),
        .reset(reset),
        .count(count)
    );

    initial begin
        clk = 0;
        forever #5 clk = ~clk;  
    end

    initial begin
        reset = 1;
        #10 reset = 0;
        #100 $finish;
    end

    initial begin
        $monitor("Time = %0t, Count = %b", $time, count);
    end
endmodule
